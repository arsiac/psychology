<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="top.arsiac.psychology.user.centre.dao.PowerMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="top.arsiac.psychology.user.centre.pojo.entity.PowerEntity" id="powerMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="version" column="version"/>
    </resultMap>

    <!-- 查询全部 -->
    <select id="selectAll" resultMap="powerMap">
        SELECT * FROM psychology_user_centre.power ORDER BY update_time
    </select>

    <!-- 模糊查询 -->
    <select id="selectFuzzy" resultMap="powerMap" parameterType="top.arsiac.psychology.user.centre.pojo.entity.PowerEntity">
        SELECT * FROM psychology_user_centre.power
        <where>
            <if test="power.name != null">
                <bind name="powerName" value="'%' + power.name + '%'"/>
                name LIKE #{powerName}
            </if>
        </where>
        ORDER BY update_time
    </select>

    <!-- 根据id查询 -->
    <select id="selectById" resultMap="powerMap" parameterType="java.lang.Long">
        SELECT * FROM psychology_user_centre.power WHERE id = #{id}
    </select>

    <!-- 插入 版本为1 时间为当前时间 -->
    <insert id="insert" parameterType="top.arsiac.psychology.user.centre.pojo.entity.PowerEntity">
        INSERT INTO psychology_user_centre.power (id, name, create_by, create_time, update_by, update_time, version)
        VALUES (#{power.id}, #{power.name},
                #{power.createBy}, CURRENT_TIMESTAMP(),
                #{power.updateBy}, CURRENT_TIMESTAMP(), 1)
    </insert>

    <!-- 更新 根据版本和id来更新数据-->
    <update id="update" parameterType="top.arsiac.psychology.user.centre.pojo.entity.PowerEntity">
        UPDATE psychology_user_centre.power
        SET name = #{power.name},
            update_by = #{power.updateBy}, update_time = CURRENT_TIMESTAMP(),
            version = #{power.version} + 1
        WHERE id = #{power.id} AND version = #{power.version}
    </update>

    <!-- 删除 根据id和版本删除 -->
    <delete id="delete" parameterType="top.arsiac.psychology.user.centre.pojo.entity.PowerEntity">
        DELETE FROM psychology_user_centre.power WHERE id = #{id} AND version = #{version}
    </delete>
</mapper>